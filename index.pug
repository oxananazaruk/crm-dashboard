include sideItems.pug
include customers.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    link(rel="icon" type="image/svg+xml" href="images/logo.svg")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title CRM-Dashboard
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
      rel="stylesheet"
    )
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/modern-normalize/3.0.1/modern-normalize.min.css"
      integrity="sha512-q6WgHqiHlKyOqslT/lgBgodhd03Wp4BEqKeW6nNtlOY4quzyG3VoQKFrieaCeSnuVseNKRGpGeDU3qPmabCANg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    )
    link(rel="stylesheet" href="./css/styles.css")
    link(rel="stylesheet" href="./css/media.css")
  body
    header.header
      .container.main-nav
        a.logo(href="./index.html")
          svg.logo-svg(width="24" height="24")
            use(href="./images/icons.svg#setting")
          p.logo-text Dashboard
            span.logo-v v.01
        button.menu-open-btn(type="button" data-menu-open)
          svg.menu-open-icon(width="32" height="22")
            use(href="./images/icons.svg#menu-hamburger")
      .mob-menu.is-hidden(data-menu)
        .container
          nav.menu-nav
            ul.mob-menu-list
              +side-item('./index.html', 'key-square', 'Dashboard', false, false)
              +side-item('./index.html', '3d-square', 'Product', true, false)
              +side-item('./index.html', 'user-square', 'Customers', true, true)
              +side-item('./index.html', 'wallet-money', 'Income', true, false)
              +side-item('./index.html', 'discount-shape', 'Promote', true, false)
              +side-item('./index.html', 'message-question', 'Help', true, false)
          .img-wrapp
            img(srcset="./images/ellipse.jpg 1x, ./images/ellipse2x.jpg 2x" src="./images/ellipse.jpg" alt="Marketing" width="42" height="42")
            .name-wrapp
              p.name-text Evano
              p.position-text Project Manager

    main
      .wrapper
        .side-container
          aside.side-bar
            a.logo(href="./index.html")
              svg.logo-svg(width="37" height="37")
                use(href="./images/icons.svg#setting")
              p.logo-text Dashboard
                span.logo-v v.01
            .nav-wrapp
              nav
                ul.side-list
                  +side-item('./index.html', 'key-square', 'Dashboard', false, false)
                  +side-item('./index.html', '3d-square', 'Product', true, false)
                  +side-item('./index.html', 'user-square', 'Customers', true, true)
                  +side-item('./index.html', 'wallet-money', 'Income', true, false)
                  +side-item('./index.html', 'discount-shape', 'Promote', true, false)
                  +side-item('./index.html', 'message-question', 'Help', true, false)
              .img-wrapp
                img(srcset="./images/ellipse.jpg 1x, ./images/ellipse2x.jpg 2x" src="./images/ellipse.jpg" alt="Marketing" width="42" height="42")
                .name-wrapp
                  p.name-text Evano
                  p.position-text Project Manager

